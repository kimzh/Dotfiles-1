#!/usr/bin/env zsh
source ${0:A:h}/../../deploy

install() {
  case $(_os) in
  macos) brew install editorconfig ;;
  arch) yay --needed --noconfirm -S editorconfig-core-c ;;
  debian) $APT_INSTALL editorconfig ;;
  esac
}

# update() {}

link() {
  mklink .editorconfig ~/.editorconfig
}

clean() {
  rm -fv ~/.editorconfig
}

init "$@"
